{
    "name":"No Procrastination",
    "version": "1.0",
    "manifest_version":2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "lazy.png",
        "default_title": "No Procrastination" 
    },

    "icons": {
        "128":"lazy.png"
    },

    "permissions" :
    ["https://www.youtube.com/*",
    "https://www.facebook.com/*",
    "https://www.netflix.com/*",
    "https://www.twitter.com/*"]



}